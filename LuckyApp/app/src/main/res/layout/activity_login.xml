<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sas_maxnot19.luckyapp.activities.LoginActivity"
    android:background="#ffffff">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/firstname_tv"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Firstname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/lastname_tv"
        android:layout_below="@+id/firstname_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/firstname_tv"
        android:layout_alignEnd="@+id/firstname_tv"
        android:layout_marginTop="6dp"
        android:hint="Lastname" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastname_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Birthday :"
            android:id="@+id/textView"
            android:layout_below="@+id/editText2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/birthday_tv"
            android:hint="Press to choose"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time of birthday"
        android:id="@+id/textView2"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeOfBirthday_tv"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:hint="Press to choose"
        android:gravity="center_vertical|center"
        android:textSize="20dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/star"
        android:src="@drawable/star"
        android:layout_above="@+id/linearLayout"
        android:layout_toRightOf="@+id/firstname_tv"
        android:layout_toEndOf="@+id/firstname_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gender :"
        android:id="@+id/textView4"
        android:layout_below="@+id/timeOfBirthday_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Submit"
        android:id="@+id/submit_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/timeOfBirthday_tv"
        android:layout_alignStart="@+id/timeOfBirthday_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reset"
        android:id="@+id/reset_btn"
        android:layout_alignTop="@+id/submit_btn"
        android:layout_alignRight="@+id/timeOfBirthday_tv"
        android:layout_alignEnd="@+id/timeOfBirthday_tv" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:id="@+id/male_rdb"
        android:checked="true"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/female_rdb"
        android:layout_alignStart="@+id/female_rdb" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:id="@+id/female_rdb"
        android:checked="false"
        android:textSize="20dp"
        android:layout_below="@+id/male_rdb"
        android:layout_alignLeft="@+id/timeOfBirthday_tv"
        android:layout_alignStart="@+id/timeOfBirthday_tv"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp" />

</RelativeLayout>
